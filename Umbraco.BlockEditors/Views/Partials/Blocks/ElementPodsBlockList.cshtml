@inherits UmbracoViewPage<Umbraco.Core.Models.Blocks.BlockListItem>

@{ var contentModel = Model.Content as ElementPodsBlockList;

    <section class="page-section" id="services">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">@contentModel.Heading</h2>
                <h3 class="section-subheading text-muted">@contentModel.SubHeading</h3>
            </div>
            <div class="row text-center">
                @foreach (var pod in contentModel.Blocks)
                {

                    var podContent = pod.Content as PodBlock;

    <div class="col-md-4">
        <span class="fa-stack fa-4x">
            <i class="fas fa-circle fa-stack-2x text-primary"></i>
            <i class="fas fa-heart fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="my-3">@podContent.Heading</h4>
        <p class="text-muted">@podContent.Text</p>
    </div>      }
            </div>
        </div>
    </section> }