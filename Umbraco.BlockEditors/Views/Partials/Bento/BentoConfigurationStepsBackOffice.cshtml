@inherits UmbracoViewPage<BentoConfigurationSteps>


    <div class="row-fluid">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">@Model.Heading</h2>
            <h3 class="section-subheading text-muted">@Model.SubHeading</h3>
        </div>
        <div class="umb-content-grid umb-outline -light">
            @foreach (var step in Model.ConfigurationSteps.Select((ol, i) => new { Step = ol, Index = i + 1 }))
            {
<div class="umb-content-grid__item umb-outline umb-outline--surrounding">
    <h4>@step.Step.PreHeading</h4>
    <h4 class="subheading">@step.Step.Heading</h4>
</div>}
        </div>
    </div>

